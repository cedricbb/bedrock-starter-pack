# Project
PROJECT_NAME=myproject

# Database (MariaDB from Arxama Stack)
DB_NAME=wordpress
DB_USER=root
DB_PASSWORD=root
DB_HOST=mariadb
DB_PREFIX=wp_

# WordPress URLs
WP_HOME=https://myproject.arxama.local
WP_SITEURL=${WP_HOME}/wp

# WordPress Keys & Salts
# Generate these: https://roots.io/salts.html
AUTH_KEY='generateme'
SECURE_AUTH_KEY='generateme'
LOGGED_IN_KEY='generateme'
NONCE_KEY='generateme'
AUTH_SALT='generateme'
SECURE_AUTH_SALT='generateme'
LOGGED_IN_SALT='generateme'
NONCE_SALT='generateme'

# Environment
WP_ENV=development
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Mail
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_FROM=noreply@myproject.local
MAIL_FROM_NAME="My Project"

# PHP
PHP_VERSION=8.2
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M

# Docker
WORDPRESS_PORT=8000

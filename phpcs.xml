<?xml version="1.0"?>
<ruleset name="Bedrock">
    <description>Bedrock coding standards</description>

    <!-- Check all PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show progress and sniff codes -->
    <arg value="ps"/>

    <!-- Use colors -->
    <arg name="colors"/>

    <!-- Paths to check -->
    <file>web/app</file>

    <!-- Exclude patterns -->
    <exclude-pattern>web/app/uploads/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Rules -->
    <rule ref="PSR12"/>
</ruleset>
